@{
    // make an associative array of senders we know, indexed by phone number
    Dictionary<string, string> people = new Dictionary<string, string>() { 
        {"+14158675309","Curious George"},
        {"+14158675310","Boots"},
        {"+14158675311","Virgil"}
    };

    // if the caller is known, then greet them by name
    // otherwise, consider them just another monkey
    string name = "Monkey";
    if (Request["From"] != null && people.Keys.Contains(Request["From"]))
    {
        name = people[Request["From"]];
    }

    // now greet the caller
    Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Say>Hello @name.</Say>
    <Play>http://demo.twilio.com/hellomonkey/monkey.mp3</Play>
    <Gather numDigits="1" action="hello-monkey14-handle-key.cshtml" method="POST">
        <Say>
            To speak with a real monkey, press 1.  
            Press 2 to record your own monkey howl.  
            Press any other key to start over.
        </Say>
    </Gather>
</Response>